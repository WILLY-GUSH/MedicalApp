<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <EditText
        android:id="@+id/email6"
        android:background="#11000000"
        android:textColor="#000000"
        android:textColorHint="#010101"
        android:drawableLeft="@drawable/ic_action_name"
        android:hint="Email"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/password6"
        android:background="#11000000"
        android:textColor="#060606"
        android:textColorHint="#010101"
        android:drawableLeft="@drawable/ic_action_password"
        android:hint="Password"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_below="@id/email6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
    android:id="@+id/registerNumber5"
    android:background="#11000000"
    android:textColor="#000000"
    android:textColorHint="#010101"
    android:drawableLeft="@drawable/ic_action_name"
    android:hint="RegisterNumber"
    android:layout_width="300dp"
    android:layout_height="30dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="40dp"
        android:layout_below="@+id/password6"
    android:ems="10"
    android:inputType="number" />

    <Button
        android:id="@+id/loginBtn3"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/registerNumber5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_rectangle"
        android:text="Login"
        android:textSize="18sp"
        app:backgroundTint="@color/purple_500" />

    <TextView
        android:id="@+id/registerItem3"
        android:layout_width="150dp"
        android:textColor="#030303"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginBtn3"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="200dp"
        android:layout_alignLeft="@id/forgotPassword3"
        android:textSize="20dp"
        android:text="Register here" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar5"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/registerItem3"
        android:layout_marginTop="30dp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/forgotPassword3"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginBtn3"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:text="Forgot password"
        android:textColor="#030303"
        android:textSize="20dp" />

</RelativeLayout>