<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientProfileDetails"
    android:background="@drawable/wallpaper21">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="80dp"
        android:id="@+id/add_picture"
        android:src="@drawable/ic_person_add_pic" />

    <TextView
        android:id="@+id/userName4"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text=""
        android:layout_below="@id/add_picture"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_below="@id/userName4"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_email_24"
        />

    <TextView
        android:id="@+id/email_textView"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text=""
        android:layout_below="@id/userName4"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="70dp"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_below="@id/email_textView"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_phone_24"
        />

    <TextView
        android:id="@+id/phone_textView"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text=""
        android:layout_below="@id/email_textView"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="40dp"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_below="@id/phone_textView"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_my_location"
        />

    <TextView
        android:id="@+id/location_textView"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text=""
        android:layout_below="@id/phone_textView"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="50dp"

        />


</RelativeLayout>